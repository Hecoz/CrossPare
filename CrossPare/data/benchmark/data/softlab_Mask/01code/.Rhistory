changeToZero <- function(file) {
if (!file.exists(file)) { return(NULL) }
all.data <- read.csv(file,header = TRUE)
all.data$Defective <- ifelse(all.data$Defective == "1", 1, 0)
write.csv(all.data,file = file)
}
